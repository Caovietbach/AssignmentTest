<body background="https://megastudy.edu.vn/upload/tinymce/gr1.jpg" style="background-size: cover;" class="body-image">
        <div class="container" style="padding-top: 160px;">
        <form action="/login" method="post">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card text-center card  bg-default mb-3">
                    <div class="card-header">
                        <h1 class="text-center mt-5">Welcome to FPT GREENWICH </h1>
                        <h3 class="text-center">Login</h3>
                    </div>
                    <span style="color: red;">{{errorMsg}}</span>
                    <div class="card-body">
                        <div class="input-group flex-nowrap">
                            <input required="true" type="name" id="" class="form-control input-sm chat-input" placeholder="Enter your Username" name="txtName"/>
                        </div>
                        <div class="input-group flex-nowrap pt-4">
                            <input required="true" type="password" id="" class="form-control input-sm chat-input" placeholder="Enter your password" name = "txtPassword"/>
                        </div>
                    </div>
                    <div class="login__decentralization">
                        <div class="checkbox">
                            <input type="checkbox" name="" id="remember-me">
                            <label for="remember-me"> Remember me</label>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        <input class="btn btn-primary" type="submit" value="Login">              
                    </div>
                    
                </div>
            </div>
        </div>
        </form>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
